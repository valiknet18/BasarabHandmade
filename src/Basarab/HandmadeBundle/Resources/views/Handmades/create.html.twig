{% extends 'BasarabHandmadeBundle::layout.html.twig' %}

{% block title %}
    Створення нового запису
{% endblock %}

{% block content %}
    <div class="row col-md-8 col-md-offset-2">
        <form method="POST" action="{{ path("basarab_handmade_handmades_create") }}" {{ form_enctype(form) }}>
            <div class="form-group">
                {{ form_row(form.name) }}
            </div>

            <div class="form-group">
                {{ form_row(form.text) }}
            </div>

            <div class="form-group">
                {{ form_widget(form) }}
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Створити</button>
            </div>
        </form>
    </div>
{% endblock %}